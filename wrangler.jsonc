{
  "name": "community-board",
  "main": "worker/src/index.ts",
  "compatibility_date": "2025-06-20",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "vars": {
    "RP_NAME": "Community Board",
    "RP_SUBTITLE": "An opensource-friendly forum",
    "R2_PUBLIC_URL": "/r2",
    "REGISTER_ENABLED": true
  },
  "assets": {
    "directory": "./ui/dist",
    "binding": "ASSETS",
    "not_found_handling": "single-page-application",
    "run_worker_first": ["/api/*", "/r2/*"]
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "community-db",
      "database_id": "d4884cbd-3e80-4f2d-839c-9ac62a650058",
      "migrations_dir": "worker/migrations"
    }
  ],
  "kv_namespaces": [
    {
      "binding": "KV_SESSIONS",
      "id": "52645f0cae714a2b9fc72ee6169c055d"
    }
  ],
  "r2_buckets": [
    {
      "binding": "R2_BUCKET",
      "bucket_name": "community-assets","preview_bucket_name": "community-assets"
    }
  ],
  "dev": {
    "port": 8787
  }
}